<?xml version="1.0"?>
<Container version="2">
  <Name>sheet-music-sync-backend</Name>
  <Repository>ghcr.io/basmulder03/sheet-music-sync-backend:latest</Repository>
  <Registry>https://ghcr.io</Registry>
  <Network>bridge</Network>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/basmulder03/sheet-music-reader/issues</Support>
  <Project>https://github.com/basmulder03/sheet-music-reader</Project>
  <Overview>Self-hosted sync backend for Sheet Music Reader. Single-tenant v1, multi-tenant ready schema.</Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:9090]/v1/health</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/basmulder03/sheet-music-reader/main/services/sync_backend/unraid/sheet-music-sync-backend.xml</TemplateURL>

  <Config Name="Web UI Port" Target="9090" Default="9090" Mode="tcp" Type="Port" Display="always" Required="true" Mask="false">Container port for backend API</Config>
  <Config Name="AppData" Target="/data" Default="/mnt/user/appdata/sheet-music-sync-backend" Mode="rw" Type="Path" Display="always" Required="true" Mask="false">Persistent data storage path</Config>
  <Config Name="API Token" Target="SYNC_BACKEND_API_TOKEN" Default="change-me" Mode="" Type="Variable" Display="always" Required="true" Mask="true">Bearer token for desktop/mobile clients</Config>
  <Config Name="Data Directory" Target="SYNC_BACKEND_DATA_DIR" Default="/data" Mode="" Type="Variable" Display="advanced" Required="true" Mask="false">Internal backend data directory</Config>
  <Config Name="Host" Target="SYNC_BACKEND_HOST" Default="0.0.0.0" Mode="" Type="Variable" Display="advanced" Required="true" Mask="false">Bind host</Config>
  <Config Name="Port" Target="SYNC_BACKEND_PORT" Default="9090" Mode="" Type="Variable" Display="advanced" Required="true" Mask="false">Bind port</Config>
</Container>
